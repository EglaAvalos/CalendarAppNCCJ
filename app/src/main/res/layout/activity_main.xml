<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ver2">

    <!-- Encabezado con nombre de iglesia y botón de menú -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3FF445"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="30dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/siglas_iglesia"
            android:textStyle="bold"
            android:textColor="@color/azul"
            android:textSize="18sp"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:src="@drawable/menunccj"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- Texto del mes y año -->
    <TextView
        android:id="@+id/month_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calendar_text"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <!-- Nombres de los días de la semana -->
    <GridLayout
        android:id="@+id/days_of_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:paddingHorizontal="8dp"
        android:layout_marginTop="8dp">
    </GridLayout>

    <!-- Calendario con scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp">

        <GridLayout
            android:id="@+id/calendar_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:paddingTop="8dp"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true" />
    </ScrollView>

</LinearLayout>
